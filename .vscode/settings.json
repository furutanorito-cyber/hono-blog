{
	"editor.defaultFormatter": "biomejs.biome",
	"editor.codeActionsOnSave": {
		"source.fixAll.biome": "always"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"cSpell.ignorePaths": [
		"package-lock.json",
		"node_modules",
		"vscode-extension",
		".git/objects",
		".vscode",
		".vscode-insiders",

		"package.json",
		".env",
		"migrations",
		"biome.json"
	],
	"cSpell.words": ["hono", "honox", "waku"],
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"editor.formatOnSave": true,
	"css.lint.unknownAtRules": "ignore",
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"editor.tabSize": 2,
	"typescript.validate.enable": false,
	"editor.wordWrap": "on"
}
